<style>
.stepwizard-step p {
    margin-top: 10px;
}

.stepwizard-row {
    display: table-row;
}

.stepwizard {
    display: table;
    width: 100%;
    position: relative;
}

.stepwizard-step button[disabled] {
    opacity: 1 !important;
    filter: alpha(opacity=100) !important;
}

.stepwizard-row:before {
    top: 14px;
    bottom: 0;
    position: absolute;
    content: " ";
    width: 100%;
    height: 1px;
    background-color: #ccc;
    z-order: 0;

}

.stepwizard-step {
    display: table-cell;
    text-align: center;
    position: relative;
}

.btn-circle {
  width: 30px;
  height: 30px;
  text-align: center;
  padding: 6px 0;
  font-size: 12px;
  line-height: 1.428571429;
  border-radius: 15px;
}
</style>

<script>
$(window).ready(function () {
    $.toaster({ priority : 'info',  message : 'Seatfilla registration'})

    var navListItems = $('div.setup-panel div a'),
            allWells = $('.setup-content'),
            allNextBtn = $('.nextBtn');

    allWells.hide();

    navListItems.click(function (e) {
        e.preventDefault();
        var $target = $($(this).attr('href')),
                $item = $(this);

        if (!$item.hasClass('disabled')) {
            navListItems.removeClass('btn-info').addClass('btn-default');
            $item.addClass('btn-info');
            allWells.hide();
            $target.show();
            $target.find('input:eq(0)').focus();
        }
    });

    function nextStep(){
        var curStep = $('#registrationForm').find(".active"),
        curStepBtn = curStep.attr("id"),
        nextStepWizard = $('div.setup-panel div a[href="#' + curStepBtn + '"]').parent().next().children("a")
        curStep.removeClass('active');
        nextStepWizard.removeAttr('disabled').addClass('active').trigger('click');
        console.log('Cur step Btn:' + curStepBtn);
        return nextStepWizard.attr('id');
    }

     $('btnNext').on('click',nextStep);

   window.seatfilla.globals.forms.validateAndSerialize('#registrationForm', '.success', '.errors', {
        successMessage:'Thank you for signing up at Seatfilla!',
        success(responseStatus, response, responseMessage) {
            var step = nextStep();
            console.log('Step: ' + step);
            if(step == 'stepTwo'){
                $('#validate-email-message').append(
                    window.seatfilla.globals.forms.validationSuccessDiv.clone().append(
                        $('<p></p>')
                         .text('Thank you for registering at Seatfilla ! An email has been dispatched to ' + response.user.email +
                        '. Please verify this email and then proceed to logging in!')));
            }
            window.seatfilla.globals.moveWindowToId('#stepOne');  
        },
        error(responseStatus, response, responseError) {
            window.seatfilla.globals.moveWindowToId('#stepOne');
        }
    });

    $('#stepOne').trigger('click');
});
</script>
 <%- partial ('../partials/nav.ejs') %>
<div class="container" style="margin-top:150px;">
<h2>Register at Seatfilla</h2>
<div class="stepwizard">
    <div class="stepwizard-row setup-panel">
        <div class="stepwizard-step">
            <a id="stepOne" href="#step-1" type="button" class="btn btn-info btn-circle">1</a>
            <p>Step 1</p>
        </div>
        <div class="stepwizard-step">
            <a id="stepTwo" href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
            <p>Step 2</p>
        </div>
        <div class="stepwizard-step">
            <a id="stepThree" href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
            <p>Step 3</p>
        </div>
    </div>
</div>
<form role="form" id="registrationForm">
    <div class="row setup-content active" id="step-1">
        <div class="container80">
            <div class="col-md-12">
                <h2 class="text-center">Enter your details</h2>
                <div class="success"></div>
                <div class="errors"></div>
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input name="username"  minlength = "3" maxlength="20" type="text" required="required" class="form-control" placeholder="Enter Username"  />
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input name="email" type="email" required="required" class="form-control" placeholder="Enter Email"/>
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input name="password" minlength="8" maxlength="25" type="password" required="required" class="form-control" placeholder="Enter Password"  />
                </div>
                <div class="form-group">
                    <label class="control-label">Confirm password</label>
                    <input name="passwordConfirmation"  minlength="8" maxlength="25" type="password" required="required" class="form-control" placeholder="Verify Password"  />
                </div>
                <div class="form-group">
                    <label class="control-label">First Name</label>
                    <input name="firstName" minlength="1" maxlength="30" type="text" required="required" class="form-control" placeholder="Enter First Name"  />
                </div>
                <div class="form-group">
                    <label class="control-label">Middle name</label>
                    <input name="middleName" minlength="1"  maxlength="30" type="text" required="required" class="form-control" placeholder="Enter Middle Name" />
                </div>
                 <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <input name="lastName" minlength="1"  maxlength="30" type="text" required="required" class="form-control" placeholder="Enter Last Name" />
                </div>
                <div class="form-group">
                    <label class="control-label">Home</label>
                    <input name="home" minlength="1"  maxlength="30" type="tel" required="required" class="form-control" placeholder="Enter Home Phone No." />
                </div>
                <div class="form-group">
                    <label class="control-label">Mobile</label>
                    <input name="mobile" minlength="1"  maxlength="30" type="tel" required="required" class="form-control" placeholder="Enter Mobile Phone No." />
                </div>
                <div class="form-group">
                    <label class="control-label">Address line one</label>
                    <input name="addressLine" minlength="1"  maxlength="30" type="text" required="required" class="form-control" placeholder="Address Line One" />
                </div>
                <div class="form-group">
                    <label class="control-label">Address line two</label>
                    <input name="addressLineTwo" minlength="1"  maxlength="30" type="text" required="required" class="form-control" placeholder="Address Line Two" />
                </div>
                <div class="form-group">
                    <label class="control-label">Address line three</label>
                    <input name="addressLineThree" minlength="1"  maxlength="30" type="text" required="required" class="form-control" placeholder="Address Line Three" />
                </div>
                 <div class="form-group">
                    <label class="control-label">Date of birth</label>
                    <input type="date" required="required" class="form-control"/>
                </div>
                 <div class="form-group">
                    <label class="control-label">City</label>
                    <select name="city" required="required" class="form-control">
                        <option>1</option>
                    </select>
                </div>
                <div class="form-group">
                    <label name="state" class="control-label">State</label>
                    <select name="state" required="required" class="form-control">
                        <option>1</option>
                    </select>
                </div>
                 <div class="form-group">
                    <label class="control-label">Country</label>
                      <select name="country" required="required" class="form-control">
                        <option>1</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Postal code</label>
                     <input name="postcode"  type="text" required="required" class="form-control" placeholder="Post code" />
                </div>
                <button class="btn btn-primary btn-lg pull-right" type="submit" >Next</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
            <div class="col-md-12">
                <h2 class="text-center">Validate your email</h2>
                <div id="validate-email-message">
                </div>
        </div>
    </div>
    <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
            <div class="col-md-12">
                 <h2 class="text-center">Login</h2>
               <a href="/user/login" > <button class="btn btn-success">Login to seatfilla</button></a>
            </div>
        </div>
    </div>
</form>
</div>
</div>

