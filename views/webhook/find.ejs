
<style>
.title-label{font-weight:400;font-size:24px;}
.navbar-barnd{vertical-align : middle;line-height:45px;}
.btn-primary.create {margin-top:10px;}
</style>
<div class="container">
	<div class="row">
    <br/>
		<p>Your webhook endpoints <span class="title-label"></span></p>
        <%- partial ('../partials/flash.ejs') %>
        <nav class="navbar navbar-default query" role="query">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-barnd" href="javascript:void(0);"></a>
                    
                </div>
                <div class="collapse navbar-collapse" id="">
                    <div class="navbar-form navbar-left">
                        <input type="text" class="form-control" />
                        <button class="btn btn-default"></button>
                    </div>
                    <button class="btn btn-primary create pull-right"></button>
                </div>
                
            </div>
        </nav>
        <div class="table-responsive col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Endpoint URL</th>
                        <th>isVerified</th>
                        <th>routes</th>
                    </tr>
                </thead>
                <tbody>
                <% data.webhooks.forEach(function(webhook){ %>
                    <tr>
                        <td><p><%=webhook.url%></p></td>
                        <td><p><span class="label label-success"><%=webhook.isVerified%></p></td>
                        <td><p><%=JSON.stringify(webhook.routes)%></p></td>
                        <td class="col-md-2"><p>
                            <a class="btn btn-link" href="/Provider/webhook/<%=webhook.id%>/sendWebhookVerification?url=<%=webhook.url%>">Verify webhook</a>
                            <a class="btn btn-link" href="/Provider/webhook/<%=webhook.id%>/destroy">Delete</a>
                        </p></td>
                    </tr>
              <% }) %>
                </tbody>
            </table>
        </div>
        <div class="pull-right">
            <ul class="pagination">
                <li><a href="#">«</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">»</a></li>
            </ul>
        </div>
	</div>
</div>