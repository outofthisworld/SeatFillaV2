<style>
  #legend {
        font-family: Arial, sans-serif;
        background: #fff;
        padding: 10px;
        margin: 10px;
        border: 3px solid orange;
      }
  #legend img {
      vertical-align: middle;
  }
  label{
    font-size:12px;
  }

  paper-button.fancy {
    color: black;
    width:100%;
    padding:10px;
    margin:0px;
  }

  .yellow-button {
    text-transform: none;
    color: #eeff41;
  }

  #myModal{
    min-width:80%;

  }

  #myModal .modal-dialog{
        min-width:80%;
        min-height:80%;
  }

